<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sms_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SmsFragment">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sms_export"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sms_export" />

        <Button
            android:id="@+id/btn_sms_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sms_backup" />

        <Button
            android:id="@+id/btn_sms_chart_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sms_chart_view" />

        <Button
            android:id="@+id/btn_sms_backup_files_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View backup files" />

        <Button
            android:id="@+id/btn_sms_delete_backup_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete backup files" />

    </LinearLayout>
</FrameLayout>