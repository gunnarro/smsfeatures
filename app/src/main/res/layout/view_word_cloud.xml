<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.WordCloudFragment">

    <RadioGroup
        android:id="@+id/radio_btn_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbarBackground"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sms_mobile_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorToolbarText"
            android:layout_marginStart="5dp"
            android:buttonTint="@color/colorRadioBtn"
            android:popupBackground="@color/cardview_dark_background"
            android:spinnerMode="dropdown"
            android:background="@color/colorToolbarText"
            android:backgroundTint="@color/colorToolbarText" />

        <CheckBox
            android:id="@+id/sms_in_out_box_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/btn_sms_in_out_box"
            android:textColor="@color/colorToolbarText"
            android:buttonTint="@color/colorRadioBtn" />
    </RadioGroup>

    <com.gunnarro.android.ughme.ui.view.WordCloudView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
